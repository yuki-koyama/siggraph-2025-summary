doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="./main.css")
    title SIGGRAPH 2025 Technical Papers
  body
    .container
      h1.mb-4 SIGGRAPH 2025 Technical Papers
      each session in sessions
        h2.mt-4.mb-3= session.name
        each paper in session.papers
          .card.mb-4
            .row.g-0
              if paper.image_file
                .col-md-3
                  img.img-fluid.rounded-start(src="../data/images/" + paper.image_file, alt=paper.title)
              .col-md-9
                .card-body
                  h5.card-title= paper.title
                  p.card-text
                    | #{paper.authors.join(', ')}
                  if paper.affiliations
                    p.card-text.text-muted= paper.affiliations.join(', ')
                  if paper.image_url
                    p.card-text
                      small.text-body-secondary 画像出典：
                      a(href=paper.image_url)= paper.image_url
